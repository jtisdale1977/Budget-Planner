@model Budget_Planner.Models.BudgetItem

<!DOCTYPE html>
<html>
<head>
    <title>Budget Planner</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta charset="UTF-8" />

    <link rel="icon" type="image/ico" href="~/assets/images/favicon.ico" />
    <!-- Bootstrap -->
    <link href="~/assets/css/vendor/bootstrap/bootstrap.min.css" rel="stylesheet">
    <link href="http://maxcdn.bootstrapcdn.com/font-awesome/4.1.0/css/font-awesome.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/assets/css/vendor/animate/animate.min.css">
    <link type="text/css" rel="stylesheet" media="all" href="~/assets/js/vendor/mmenu/css/jquery.mmenu.all.css" />
    <link rel="stylesheet" href="~/assets/js/vendor/videobackground/css/jquery.videobackground.css">
    <link rel="stylesheet" href="~/assets/css/vendor/bootstrap-checkbox.css">
    <link rel="stylesheet" href="~/assets/css/vendor/bootstrap/bootstrap-dropdown-multilevel.css">
    <link rel="stylesheet" href="~/assets/js/vendor/summernote/css/summernote.css">
    <link rel="stylesheet" href="~/assets/js/vendor/summernote/css/summernote-bs3.css">

    <link href="~/assets/css/minimal.css" rel="stylesheet">

    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
      <script src="https://oss.maxcdn.com/libs/respond.js/1.3.0/respond.min.js"></script>
    <![endif]-->
</head>

<body class="bg-1">
    <form style="height:100%; overflow: hidden;">
        <!-- Preloader -->
        <div class="mask"><div id="loader"></div></div>
        <!--/Preloader -->
        <!-- Wrap all page content here -->
        <div id="wrap">


            <!-- Make page fluid -->
            <div class="row">


                <!-- Fixed navbar -->
                <div class="navbar navbar-default navbar-fixed-top navbar-transparent-black mm-fixed-top collapsed" role="navigation" id="navbar">


                    <!-- Branding -->
                    <div class="navbar-header col-md-2">
                        <a class="navbar-brand" href="javascript:void(0);">
                            <strong>POCKET </strong>GAURD
                        </a>
                        <div class="sidebar-collapse">
                            <a href="#">
                                <i class="fa fa-bars"></i>
                            </a>
                        </div>
                    </div>
                    <!-- Branding end -->
                    <!-- .nav-collapse -->
                    <div class="navbar-collapse">

                        <!-- Page refresh -->
                        <ul class="nav navbar-nav refresh">
                            <li class="divided">
                                <a href="#" class="page-refresh"><i class="fa fa-refresh"></i></a>
                            </li>
                        </ul>
                        <!-- /Page refresh -->
                        <!-- Search -->
                        <div class="search" id="main-search">
                            <i class="fa fa-search"></i> <input type="text" placeholder="Search...">
                        </div>
                        <!-- Search end -->
                        <!-- Quick Actions -->
                        <ul class="nav navbar-nav quick-actions">

                            <li class="dropdown divided user" id="current-user">
                                <div class="profile-photo">
                                    <img src="~/assets/images/profile-photo.jpg" />
                                </div>
                                <a class="dropdown-toggle options" data-toggle="dropdown">
                                    Welcome @User.Identity.Name <i class="fa fa-caret-down"></i>
                                </a>

                                <ul class="dropdown-menu arrow settings">
                                    @if (Request.IsAuthenticated)
                                    {
                                        using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
                                        {
                                            @Html.AntiForgeryToken()
                                            <li>
                                                <a href="javascript:(0);"><i class="fa fa-user"></i> @User.Identity.Name</a>

                                            </li>

                                            <li class="divider"></li>

                                            <li>
                                                <a href="@Url.Action("Index", "Manage")"><i class="fa fa-gear"></i> My Account</a>
                                            </li>

                                            <li>
                                                <a href="javascript:document.getElementById('logoutForm').submit()"><i class="fa fa-calendar"></i> Logout</a>
                                            </li>

                                            <li>
                                                <a href="javascript:(0);"><i class="fa fa-envelope"></i> Messages <span class="badge badge-red" id="user-inbox">0</span></a>
                                            </li>
                                        }
                                    }
                                </ul>
                            </li>
                            <li>
                                <a href="#mmenu"><i class="fa fa-comments"></i></a>
                            </li>
                        </ul>
                        <!-- /Quick Actions -->
                        <!-- Sidebar -->
                        <ul class="nav navbar-nav side-nav" id="sidebar">

                            <li class="collapsed-content">
                                <ul>
                                    <li class="search"><!-- Collapsed search pasting here at 768px --></li>
                                </ul>
                            </li>

                            <li class="navigation" id="navigation">
                                <a href="#" class="sidebar-toggle" data-toggle="#navigation">Navigation <i class="fa fa-angle-up"></i></a>

                                <ul class="menu">

                                    <li class="active">
                                        <a href="javascript:void(0);">
                                            <i class="fa fa-tachometer"></i> Dashboard
                                            @*<span class="badge badge-red">1</span>*@
                                        </a>
                                    </li>

                                    <li class="dropdown">
                                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                                            <i class="fa fa-"></i> Household <b class="fa fa-plus dropdown-plus"></b>
                                        </a>
                                        <ul class="dropdown-menu">
                                            <li>
                                                <a href="@Url.Action("Details", "Households")">
                                                    <i class="fa fa-caret-right"></i> My Household
                                                </a>
                                            </li>
                                            <li>
                                                <a href="@Url.Action("Index", "BankAccounts")">
                                                    <i class="fa fa-caret-right"></i> House Accounts
                                                </a>
                                            </li>
                                            <li>
                                                <a href="@Url.Action("Index", "Budgets")">
                                                    <i class="fa fa-caret-right"></i> House Budgets
                                                </a>
                                            </li>
                                            <li class="dropdown">
                                                <a href="#" class="dropdown-toggle" data-toggle="dropdown"><i class="fa fa-usd"></i> House Transactions <b class="fa fa-plus dropdown-plus"></b></a>
                                                <ul class="dropdown-menu">
                                                    <li>
                                                        <a href="@Url.Action("Index", "Transactions")">
                                                            <i class="fa fa-caret-right"></i> Transaction Index
                                                        </a>
                                                    </li>
                                                    <li>
                                                        <a href="@Url.Action("Create", "Transactions")">
                                                            <i class="fa fa-caret-right"></i> New Transaction
                                                        </a>
                                                    </li>
                                                </ul>
                                            </li>
                                        </ul>
                                    </li>
                                </ul>

                            </li>

                            <li class="settings" id="general-settings">
                                <a href="#" class="sidebar-toggle underline" data-toggle="#general-settings">User Settings <i class="fa fa-angle-up"></i></a>

                                <ul class="menu">

                                    <li class="active">
                                        <a href="javascript:void(0);">
                                            <i class="fa fa-users"></i> Member(s) Profile
                                        </a>
                                    </li>

                                    <li class="dropdown">
                                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                                            <i class="fa fa-user"></i> User Options <b class="fa fa-plus dropdown-plus"></b>
                                        </a>
                                        <ul class="dropdown-menu">
                                            @if (Request.IsAuthenticated)
                                            {
                                                using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
                                                {
                                                    @Html.AntiForgeryToken()
                                                    <li>
                                                        <a href="@Url.Action("Index", "Manage")">
                                                            <i class="fa fa-caret-right"></i> Update Profile
                                                        </a>
                                                    </li>
                                                    <li>
                                                        <a href="@Url.Action("ForgotPassword", "Account")">
                                                            <i class="fa fa-caret-right"></i> Forgot Password
                                                        </a>
                                                    </li>
                                                    <li>
                                                        <a href="javascript:document.getElementById('logoutForm').submit()">
                                                            <i class="fa fa-caret-right"></i> Log Off
                                                        </a>
                                                    </li>
                                                }
                                            }
                                        </ul>
                                    </li>
                                </ul>
                            </li>
                        </ul>
                        <!-- Sidebar end -->

                    </div>
                    <!--/.nav-collapse -->

                </div>
                <!-- Fixed navbar end -->
                <!-- Page content -->
                <div id="content" class="col-md-12">

                    <!-- page header -->
                    <div class="pageheader">

                        <h2>
                            <i class="fa fa-tachometer"></i> Household
                            <span>// Budget tems...</span>
                        </h2>

                        <div class="breadcrumbs">
                            <ol class="breadcrumb">
                                <li>You are here</li>
                                <li><a href="javascript:void(0);">Budget Items</a></li>
                                <li class="active">Edit</li>
                            </ol>
                        </div>

                    </div>
                    <!-- /page header -->
                    <!-- content main container -->
                    <div class="main">

                        <!-- row -->
                        <div class="row">
                            <!-- col 12 -->
                            <div class="col-md-6">



                                <!-- tile -->
                                <section class="tile color transparent-black">



                                    <!-- tile header -->
                                    <div class="tile-header">
                                        <h1><strong>Edit</strong> Budget Item</h1>
                                        <div class="controls">
                                            <a href="#" class="minimize"><i class="fa fa-chevron-down"></i></a>
                                            <a href="@Url.Action("Details", "BudgetItems")"><i class="fa fa-search"></i></a>
                                            <a href="@Url.Action("Delete", "BudgetItems")"><i class="fa fa-times"></i></a>
                                        </div>
                                    </div>
                                    <!-- /tile header -->
                                    <!-- tile body -->
                                    <div class="tile-body">
                                        @using (Html.BeginForm())
                                        {
                                            @Html.AntiForgeryToken()

                                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                            @Html.HiddenFor(model => model.Id)
                                            @Html.HiddenFor(model => model.Created)
                                            @Html.HiddenFor(model => model.Updated)
                                            @Html.HiddenFor(model => model.EnteredBy)
                                            @Html.HiddenFor(model => model.UpdatedBy)

                                            <div class="form-horizontal" role="form">

                                                <div class="form-group">
                                                        <label for="input03" class="col-sm-4 control-label">Budget Item Category</label>
                                                        <div class="col-sm-8">
                                                            @Html.DropDownList("CategoryId", null, htmlAttributes: new { @class = "form-control" })
                                                            @Html.ValidationMessageFor(model => model.CategoryId, "", new { @class = "text-danger" })
                                                            @*<input type="text" class="form-control" id="input03">*@
                                                            <span class="help-block">Remember to discuss your new category with your fellow household members.</span>
                                                        </div>
                                                    </div>

                                                <div class="form-group">
                                                    <label for="input03" class="col-sm-4 control-label">Budget Amount</label>
                                                    <div class="col-sm-8">
                                                        @Html.LabelFor(model => model.Amount, "Amount", new { htmlAttributes = new { @class = "form-control" }, id = "input03" })
                                                        @Html.ValidationMessageFor(model => model.Amount, "", new { @class = "text-danger" })
                                                        <input type="text" class="form-control" id="input03">
                                                        <span class="help-block">Remember to discuss your new amount with your fellow household members.</span>
                                                    </div>
                                                </div>

                                                <div class="form-group transparent-editor">
                                                    <label class="col-sm-4 control-label">Budget Notes</label>
                                                    <div class="col-sm-8">
                                                        @Html.EditorFor(model => model.Notes, new { htmlAttributes = new { @class = "form-control", id = "cNotes" } })
                                                        @Html.ValidationMessageFor(model => model.Notes, "", new { @class = "text-danger" })
                                                    </div>
                                                </div>

                                                <div class="form-group form-footer">
                                                    <div class="col-sm-offset-4 col-sm-8">
                                                        <input type="submit" value="Submit" class="btn btn-default" />
                                                    </div>
                                                </div>

                                            </div>
                                        }
                                    </div>
                                    <!-- /tile body -->

                                </section>
                                <!-- /tile -->
                                <div class="btn-group btn-group-justified margin-bottom-20">
                                    <a class="btn btn-slategray" role="button" href="@Url.Action("Index", "BudgetsItems")">Back to Budgets</a>
                                </div>
                            </div>

                        </div>
                        <!-- /col 6 -->
                    </div>
                    <!-- /row -->

                </div>
                <!-- /content container -->

            </div>
            <!-- Page content end -->
        </div>
        <!-- Make page fluid-->
        <!-- Wrap all page content end -->
        <!-- jQuery (necessary for Bootstrap's JavaScript plugins) -->
        <script src="https://code.jquery.com/jquery.js"></script>
        <!-- Include all compiled plugins (below), or include individual files as needed -->
        <script src="~/assets/js/vendor/bootstrap/bootstrap.min.js"></script>
        <script src="~/assets/js/vendor/bootstrap/bootstrap-dropdown-multilevel.js"></script>
        <script src="https://cdn.rawgit.com/google/code-prettify/master/loader/run_prettify.js?lang=css&amp;skin=sons-of-obsidian"></script>
        <script type="text/javascript" src="~/assets/js/vendor/mmenu/js/jquery.mmenu.min.js"></script>
        <script type="text/javascript" src="~/assets/js/vendor/sparkline/jquery.sparkline.min.js"></script>
        <script type="text/javascript" src="~/assets/js/vendor/nicescroll/jquery.nicescroll.min.js"></script>
        <script type="text/javascript" src="~/assets/js/vendor/animate-numbers/jquery.animateNumbers.js"></script>
        <script type="text/javascript" src="~/assets/js/vendor/videobackground/jquery.videobackground.js"></script>
        <script type="text/javascript" src="~/assets/js/vendor/blockui/jquery.blockUI.js"></script>
        <script src="~/assets/js/vendor/summernote/summernote.min.js"></script>

        <script src="~/Scripts/tinymce/themes/modern/theme.min.js"></script>
        <script src="~/Scripts/tinymce/themes/modern/theme.js"></script>
        <script src="~/Scripts/tinymce/jquery.tinymce.min.js"></script>
        <script src="~/Scripts/tinymce/tinymce.js"></script>
        <script src="~/Scripts/tinymce/tinymce.min.js"></script>

        <script src="~/assets/js/minimal.min.js"></script>

        <script>
            $(function () {
                $("#cNotes").tinymce({});
            });
        </script>
    </form>
    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }


</body>
</html>

