@model Budget_Planner.Models.Transaction

<!DOCTYPE html>
<html>
<head>
    <title>Budget Planner</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta charset="UTF-8" />

    <link rel="icon" type="image/ico" href="~/assets/images/favicon.ico" />
    <!-- Bootstrap -->
    <link href="~/assets/css/vendor/bootstrap/bootstrap.min.css" rel="stylesheet">
    <link href="http://maxcdn.bootstrapcdn.com/font-awesome/4.1.0/css/font-awesome.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/assets/css/vendor/animate/animate.min.css">
    <link type="text/css" rel="stylesheet" media="all" href="~/assets/js/vendor/mmenu/css/jquery.mmenu.all.css" />
    <link rel="stylesheet" href="~/assets/js/vendor/videobackground/css/jquery.videobackground.css">
    <link rel="stylesheet" href="~/assets/css/vendor/bootstrap-checkbox.css">
    <link rel="stylesheet" href="~/assets/css/vendor/bootstrap/bootstrap-dropdown-multilevel.css">

    <link href="~/assets/css/minimal.css" rel="stylesheet">

    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
      <script src="https://oss.maxcdn.com/libs/respond.js/1.3.0/respond.min.js"></script>
    <![endif]-->
</head>

<body class="bg-1">
    <form style="height:100%; overflow: hidden;">
        <!-- Preloader -->
        <div class="mask"><div id="loader"></div></div>
        <!--/Preloader -->
        <!-- Wrap all page content here -->
        <div id="wrap">

            <!-- Make page fluid -->
            <div class="row">

                <!-- Fixed navbar -->
                <div class="navbar navbar-default navbar-fixed-top navbar-transparent-black mm-fixed-top collapsed" role="navigation" id="navbar">


                    <!-- Branding -->
                    <div class="navbar-header col-md-2">
                        <a class="navbar-brand" href="javascript:void(0);">
                            <strong>BUDGET </strong>PLANNER
                        </a>
                        <div class="sidebar-collapse">
                            <a href="#">
                                <i class="fa fa-bars"></i>
                            </a>
                        </div>
                    </div>
                    <!-- Branding end -->
                    <!-- .nav-collapse -->
                    <div class="navbar-collapse">

                        <!-- Page refresh -->
                        <ul class="nav navbar-nav refresh">
                            <li class="divided">
                                <a href="#" class="page-refresh"><i class="fa fa-refresh"></i></a>
                            </li>
                        </ul>
                        <!-- /Page refresh -->
                        <!-- Search -->
                        <div class="search" id="main-search">
                            <i class="fa fa-search"></i> <input type="text" placeholder="Search...">
                        </div>
                        <!-- Search end -->
                        <!-- Quick Actions -->
                        <ul class="nav navbar-nav quick-actions">

                            <li class="dropdown divided user" id="current-user">
                                <div class="profile-photo">
                                    <img src="~/assets/images/profile-photo.jpg" alt />
                                </div>
                                <a class="dropdown-toggle options" data-toggle="dropdown">
                                    @Html.Partial("_LoginPartial") @*<i class="fa fa-caret-down"></i>*@
                                </a>

                                <ul class="dropdown-menu arrow settings">

                                    <li class="divider"></li>

                                    <li>
                                        <a href="#"><i class="fa fa-user"></i> Profile</a>
                                    </li>

                                    <li>
                                        <a href="#"><i class="fa fa-calendar"></i> Calendar</a>
                                    </li>

                                    <li>
                                        <a href="#"><i class="fa fa-envelope"></i> Inbox <span class="badge badge-red" id="user-inbox">3</span></a>
                                    </li>

                                    <li class="divider"></li>

                                    <li>
                                        <a href="#"><i class="fa fa-power-off"></i> Logout</a>
                                    </li>
                                </ul>
                            </li>
                        </ul>
                        <!-- /Quick Actions -->
                        <!-- Sidebar -->
                        <ul class="nav navbar-nav side-nav" id="sidebar">

                            <li class="collapsed-content">
                                <ul>
                                    <li class="search"><!-- Collapsed search pasting here at 768px --></li>
                                </ul>
                            </li>

                            <li class="navigation" id="navigation">
                                <a href="#" class="sidebar-toggle" data-toggle="#navigation">Navigation <i class="fa fa-angle-up"></i></a>

                                <ul class="menu">

                                    <li class="active">
                                        <a href="javascript:void(0);">
                                            <i class="fa fa-tachometer"></i> Dashboard
                                            @*<span class="badge badge-red">1</span>*@
                                        </a>
                                    </li>

                                    <li class="dropdown">
                                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                                            <i class="fa fa-heart"></i> Household <b class="fa fa-plus dropdown-plus"></b>
                                        </a>
                                        <ul class="dropdown-menu">
                                            <li>
                                                <a href="@Url.Action("Join", "Households")">
                                                    <i class="fa fa-caret-right"></i> Join
                                                </a>
                                            </li>
                                        </ul>
                                    </li>
                                </ul>

                            </li>

                            <li class="settings" id="general-settings">
                                <a href="#" class="sidebar-toggle underline" data-toggle="#general-settings">User Settings <i class="fa fa-angle-up"></i></a>

                                <ul class="menu">

                                    <li class="active">
                                        <a href="javascript:void(0);">
                                            <i class="fa fa-users"></i> Member(s) Profile
                                        </a>
                                    </li>

                                    <li class="dropdown">
                                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                                            <i class="fa fa-user"></i> User Options <b class="fa fa-plus dropdown-plus"></b>
                                        </a>
                                        <ul class="dropdown-menu">
                                            <li>
                                                <a href="javascript:void(0);">
                                                    <i class="fa fa-caret-right"></i> Update Profile
                                                </a>
                                            </li>
                                            <li>
                                                <a href="javascript:void(0);">
                                                    <i class="fa fa-caret-right"></i> Change Password
                                                </a>
                                            </li>
                                            <li>
                                                <a href="javascript:void(0);">
                                                    <i class="fa fa-caret-right"></i> Sign Out
                                                </a>
                                            </li>
                                        </ul>
                                    </li>
                                </ul>
                            </li>
                        </ul>
                        <!-- Sidebar end -->

                    </div>
                    <!--/.nav-collapse -->

                </div>
                <!-- Fixed navbar end -->
                <!-- Page content -->
                <div id="content" class="col-md-12">

                    <!-- page header -->
                    <div class="pageheader">

                        <h2>
                            <i class="fa fa-tachometer"></i> Household
                            <span>// Transactions...</span>
                        </h2>

                        <div class="breadcrumbs">
                            <ol class="breadcrumb">
                                <li>You are here</li>
                                <li><a href="javascript:void(0);">Transactions</a></li>
                                <li class="active">Details</li>
                            </ol>
                        </div>

                    </div>
                    <!-- /page header -->
                    <!-- content main container -->
                    <div class="main">

                        <menu class="no-print">
                            <button type="button" class="btn btn-greensea"><i class="fa fa-usd"></i> @Html.ActionLink("Edit", "Edit", new { id = Model.Id })</button>
                            <a href="javascript:window.print()" class="btn btn-slategray"><i class="fa fa-print"></i> Print</a>
                            <button type="button" class="btn btn-slategray"><i class="fa fa-file-pdf-o"></i> @Html.ActionLink("Back to List", "Index")</button>
                        </menu>

                        <!-- row -->
                        <div class="row">

                            <!-- col 12 -->
                            <div class="col-md-12">

                                <section class="invoice">

                                    <div class="header">
                                        <div class="row">

                                            <div class="col-md-4">
                                                <h3><strong>@Html.DisplayFor(model => model.Date)</strong></h3>

                                                <h4>Entered By:</h4>

                                                <address>
                                                    <strong>@Html.DisplayFor(model => model.EnteredBy.FirstName) @Html.DisplayFor(model => model.EnteredBy.LastName)</strong><br />
                                                    <br />
                                                </address>

                                                <address>
                                                    <strong>@Html.DisplayFor(model => model.TransactionType.Name)</strong><br />
                                                </address>
                                            </div>

                                            <div class="col-md-4 arrow visible-md-block visible-lg-block">
                                                <i class="fa fa-angle-right fa-4x"></i>
                                            </div>

                                            <div class="col-md-4 text-right">
                                                <h3><strong>Invoice</strong></h3>

                                                <h4>Details</h4>

                                                <address>
                                                    <strong>@Html.DisplayFor(model => model.BankAccountsId)</strong><br />
                                                    <br />
                                                </address>

                                                <address>
                                                    <strong>@Html.DisplayFor(model => model.Categories.Name)</strong><br />
                                                </address>

                                                <dl class="dl-horizontal total">
                                                    <dt>Total</dt>
                                                    <dd><strong>@Html.DisplayFor(model => model.Amount)</strong> USD</dd>
                                                </dl>

                                            </div>

                                        </div>
                                    </div>

                                    <table class="table table-responsive">

                                        <thead>
                                            <tr>
                                                <th>#</th>
                                                <th class="description">Description</th>
                                                <th>Reconciled</th>
                                                <th style="min-width: 80px;">Reconciled Amount</th>
                                                <th>Subtotal</th>
                                            </tr>
                                        </thead>

                                        <tbody>
                                            <tr>
                                                <td>@Html.DisplayFor(model => model.TransactionType.Id)</td>
                                                <td class="description">
                                                    <strong>@Html.DisplayFor(model => model.Notes)</strong>
                                                </td>
                                                <td>@Html.DisplayFor(model => model.Reconciled)</td>
                                                <td>@Html.DisplayFor(model => model.ReconcileAmount)</td>
                                                <td>@Html.DisplayFor(model => model.Amount)</td>
                                            </tr>
                                        </tbody>

                                    </table>

                                    <div class="footer">

                                        <div class="row">
                                            <div class="col-md-6"></div>
                                            <div class="col-md-6">
                                                <section class="summary">
                                                    <dl class="dl-horizontal total">
                                                        <dt>Total</dt>
                                                        <dd><strong>@Html.DisplayFor(model => model.Amount)</strong> USD</dd>
                                                    </dl>
                                                </section>
                                            </div>
                                        </div>

                                        <div class="row">
                                            <div class="col-md-12">
                                                <div class="well well-lg well-slategray">
                                                    <p align=center><strong><em>Tip: The Edit button in the top left of the screen will allow you to change, update, and/or reconcile your transaction. Please remember to be accurate and detailed. Thank you and enjoy!</em></strong></p>
                                                </div>
                                            </div>
                                        </div>

                                    </div>

                                </section>

                            </div>
                            <!-- /col 12 -->

                        </div>
                        <!-- /row -->

                    </div>
                    <!-- /content container -->

                </div>
                <!-- Page content end -->
            </div>
            <!-- Make page fluid-->
        </div>
        <!-- Wrap all page content end -->
        <!-- jQuery (necessary for Bootstrap's JavaScript plugins) -->
        <script src="https://code.jquery.com/jquery.js"></script>
        <!-- Include all compiled plugins (below), or include individual files as needed -->
        <script src="~/assets/js/vendor/bootstrap/bootstrap.min.js"></script>
        <script src="~/assets/js/vendor/bootstrap/bootstrap-dropdown-multilevel.js"></script>
        <script src="https://cdn.rawgit.com/google/code-prettify/master/loader/run_prettify.js?lang=css&amp;skin=sons-of-obsidian"></script>
        <script type="text/javascript" src="~/assets/js/vendor/mmenu/js/jquery.mmenu.min.js"></script>
        <script type="text/javascript" src="~/assets/js/vendor/sparkline/jquery.sparkline.min.js"></script>
        <script type="text/javascript" src="~/assets/js/vendor/nicescroll/jquery.nicescroll.min.js"></script>
        <script type="text/javascript" src="~/assets/js/vendor/animate-numbers/jquery.animateNumbers.js"></script>
        <script type="text/javascript" src="~/assets/js/vendor/videobackground/jquery.videobackground.js"></script>
        <script type="text/javascript" src="~/assets/js/vendor/blockui/jquery.blockUI.js"></script>

        <script src="~/assets/js/vendor/chosen/chosen.jquery.min.js"></script>

        <script src="~/assets/js/minimal.min.js"></script>
        <script>

        </script>
    </form>
</body>
</html>

