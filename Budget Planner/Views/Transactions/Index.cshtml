                                                            <td class="text-center">@Html.DisplayFor(modelItem => item.BankAccountsId)</td>
                                                            <td class="text-center">@Html.DisplayFor(modelItem => item.EnteredBy.FirstName)</td>
                                                            <td class="text-center">@Html.DisplayFor(modelItem => item.Categories.Name)</td>
                                                            <td class="text-center">@Html.DisplayFor(modelItem => item.Amount)</td>
                                                            <td class="text-center">@Html.DisplayFor(modelItem => item.TransactionType.Name)</td>
                                                            <td class="text-center">@Html.Raw(item.Notes)</td>
                                                            <td class="text-center">@Html.DisplayNameFor(model => model.Reconciled)</td>
                                                            <td class="text-center">
                                                                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                                                                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                                                                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                                                            </td>
                                                        </tr>
                                                    }
