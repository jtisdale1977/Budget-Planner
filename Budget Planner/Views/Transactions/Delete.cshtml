@model Budget_Planner.Models.Transaction

@{
    ViewBag.Title = "Delete Transaction";
}

@section ContentHeader {
    <h1>Delete Transaction?</h1>
}

<div class="row">
    <div class="col-lg-12">
        <table class="table table-striped table-bordered table-responsive">
            <thead>
                <tr>
                    <th>
                        @Html.LabelFor(model => model.Amount, "Amount")
                    </th>
                    <th>
                        @Html.LabelFor(model => model.BankAccounts.Name, "Account")
                    </th>
                    <th>
                        @Html.LabelFor(model => model.TransactionType.Name, "Transaction Type")
                    </th>
                    <th>
                        @Html.LabelFor(model => model.Categories.Name, "Category")
                    </th>
                    <th>
                        @Html.LabelFor(model => model.Date, "Date")
                    </th>
                    <th>
                        @Html.LabelFor(model => model.Reconciled, "Reconciled")
                    </th>
                    <th>
                        @Html.LabelFor(model => model.ReconcileAmount, "Reconciled Amount")
                    </th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>
                        @Html.DisplayFor(model => model.Amount)
                    </td>
                    <td>
                        @Html.DisplayFor(model => model.BankAccounts.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(model => model.TransactionType.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(model => model.Categories.Name)
                    </td>
                    <td>
                        @Model.Date.ToLocalTime().ToString("MMM dd, yyyy - hh:mm tt")
                    </td>
                    <td>
                        @Html.DisplayFor(model => model.Reconciled)
                    </td>
                    <td>
                        @Html.DisplayFor(model => model.ReconcileAmount)
                    </td>
                </tr>
            </tbody>
        </table>
    </div>
</div>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="row">
        <div class="col-lg-12">
            <div class="form-actions no-color">
                <input type="submit" value="Delete" class="btn btn-danger" />
            </div>
        </div>
    </div>
}

<div class="row">
    <div class="col-lg-12">
        <a href=@Url.Action("ForAccount", "Transactions", new { id = @Model.BankAccountsId}) class="btn btn-sm btn-primary" title="Back to Account Transactions">
            <i class="fa fa-angle-double-left"></i> Back to "@Model.BankAccounts.Name" Account Transactions
        </a>
    </div>
</div>

<div class="row">
    <div class="col-lg-12">
        <a href=@Url.Action("Index", "Transactions") class="btn btn-sm btn-primary" title="Back to Transactions">
            <i class="fa fa-angle-double-left"></i> Back to Transactions
        </a>
    </div>
</div>


