@model Budget_Planner.Models.BankAccount

@{
    ViewBag.Title = "Bank Account Details";
}

@section ContentHeader {
    <h1>"@Model.Name" Bank Account Details</h1>
}

<table class="table table-striped table-bordered table-responsive">
    <thead>
        <tr>
            <th>
                <i class="fa fa-usd"></i> @Html.DisplayNameFor(model => model.Balance)
            </th>
            <th>
                <i class="fa fa-usd"></i> Reconciled Balance
            </th>
            <th>
                <i class="fa fa-calendar"></i> Creation Date
            </th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td>
                @Html.DisplayFor(model => model.Balance)
            </td>
            <td>
                @Html.DisplayFor(model => model.ReconcileBalance)
            </td>
            <td>
                @Model.Created.ToLocalTime().ToString("MMM dd, yyyy - hh:mm tt")
            </td>
        </tr>
    </tbody>
</table>
<div class="row">
    <div class="col-lg-12">
        <a href=@Url.Action("Edit", "BankAccounts", new { id = @Model.Id}) class="btn btn-sm btn-default" title="Edit this account">
            <i class="fa fa-edit"></i> Edit this account
        </a>
    </div>
</div>
<div class="row">
    <div class="col-lg-12">
        <a href=@Url.Action("ForAccount", "Transactions", new { id = Model.Id}) class="btn btn-sm btn-primary" title='View "@Model.Name" transactions'>
            <i class="fa fa-search"></i> Account Transactions
        </a>
    </div>
</div>
<div class="row">
    <div class="col-lg-12">
        <a href=@Url.Action("Index", "BankAccounts") class="btn btn-sm btn-primary">
            <i class="fa fa-angle-double-left"></i> Back to My Accounts
        </a>
    </div>
</div>
<div class="row">
    <div class="col-lg-12">
        <a href=@Url.Action("Delete", "BankAccounts", new { id = @Model.Id}) class="btn btn-sm btn-danger" title="Delete this account">
            <i class="fa fa-trash-o"></i> Delete this account
        </a>
    </div>
</div>

